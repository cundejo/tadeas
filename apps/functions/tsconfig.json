{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
